{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    /* Ensure ES collections & iterables are available */
    "lib": [
      "ES2015",
      "ES2015.Collection",
      "ES2015.Iterable",
      "ES2015.Symbol",
      "ES2015.Promise",
      "ES2020"
    ],

    /* Allow TS to transform ESM imports to CJS */
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
