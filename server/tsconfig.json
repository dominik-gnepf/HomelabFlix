{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // ✅ Include modern JS built-ins (Map, Set, Symbol, Iterable, WeakMap, etc.)
    "lib": ["ES2020"],

    // Keep TS free to transform ESM imports → CJS for Node
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
